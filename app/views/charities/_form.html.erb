
<%= simple_form_for @charity, :html => {:multipart => true} do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :logo, :as => :file, :label => "Logo" %>
    <%= f.input :catchphrase, label:"Phrase d'accroche" %>
    <%= f.input :description %>
    <%= f.input :phone, label:"Téléphone" %>
    <%= f.input :email %>
    <%= f.input :website, label:"Site internet" %>
    <%= f.input :adress, label:"Adresse" %>
    <%= f.input :zipcode, label:"Code postale" %>
    <%= f.input :city, label:"Ville" %>
    <%= f.input :country, label:"Pays" %>
    <%= f.input :name, label:"Nom" %>
  </div>

  <div class="form-actions">
  <%= f.button :submit, "Valider l'aide" %>
  </div>
<% end %>
